{
  "extends": "@tsconfig/node12/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "lib": [
      "DOM"
    ]
  },
  "exclude": [
    "./src/server "
  ],
  "include": [
    "./src/client/*",
    "./src/client/types/**/*.d.ts"
  ]
}

